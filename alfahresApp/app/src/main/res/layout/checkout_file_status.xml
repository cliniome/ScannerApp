<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/fileNoLbl"
        android:text="@string/file_view_fileNo"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/new_file_FileNumber"
        android:layout_width="match_parent"
        android:text="File Number"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:gravity="center"
        android:textSize="32dp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fxClinicName"
        android:text="Clinic Name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:singleLine="false"
        android:layout_below="@+id/new_file_FileNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/txtClinicNameText"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Clinic Name Here"
        android:gravity="center"
        android:textSize="32dp"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center" />




    <TextView
        android:id="@+id/fxclinicCodeText"
        android:text="Clinic Code"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/txtClinicCode"
        android:text="Clinic Code here"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="32dp"
         />


</LinearLayout>
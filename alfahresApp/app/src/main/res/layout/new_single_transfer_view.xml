<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/new_file_FirstVerticalPane"
        android:paddingLeft="8dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- File Number  -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/new_txt_file_Number"
                android:text="@string/file_fileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark" />
            <TextView
                android:id="@+id/new_file_FileNumber"
                android:text="xxxxxxxx"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- Requesting Doc -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:text="@string/file_docName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/lbl_requestingdocName"
                android:textColor="@android:color/holo_red_dark" />
            <TextView
                android:id="@+id/new_file_RequestingDocName"
                android:text="xxxxxxxx"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- Requesting Clinic -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:text="@string/file_clinicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark" />
            <TextView
                android:id="@+id/new_file_RequestingClinic"
                android:text="xxxxxxxx"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <!-- Requesting Clinic Code -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:text="@string/file_clinicCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark" />
            <TextView
                android:id="@+id/new_file_RequestingClinicCode"
                android:text="xxxxxxxx"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>




    </LinearLayout>


</RelativeLayout>
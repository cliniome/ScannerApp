<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wadidejla.com.alfahresapp" >

    <uses-sdk android:minSdkVersion="17"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <receiver android:name="com.wadidejla.sensors.SystemSensorReceiver">

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.REBOOT"/>
                <action android:name="android.intent.action.BATTERY_LOW"/>
                <action android:name="android.intent.action.BATTERY_OKAY"/>

            </intent-filter>


        </receiver>


        <activity
            android:name=".AlfahresMain"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>


        <activity
            android:name=".LoginScreen"
            android:label="LoginScreen"
            android:theme="@style/AppTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:parentActivityName=".AlfahresMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wadidejla.com.alfahresapp.AlfahresMain" />
        </activity>
    </application>

</manifest>
